# üèõÔ∏è CAVA Configuration
# Separate from main .env to ensure MODULE INDEPENDENCE
# Constitutional Principle: Each module must work independently

# CAVA Database Configuration
CAVA_NEO4J_URI=bolt://localhost:7687
CAVA_NEO4J_USER=neo4j
CAVA_NEO4J_PASSWORD=cavapassword123

CAVA_REDIS_URL=redis://localhost:6379
CAVA_REDIS_EXPIRE_SECONDS=3600

# Pinecone Configuration (if available)
# CAVA_PINECONE_API_KEY=your-pinecone-key
# CAVA_PINECONE_ENVIRONMENT=your-pinecone-env
# CAVA_PINECONE_INDEX=cava-conversations

# PostgreSQL - Using existing AWS RDS
# Inherits from main config but uses separate schema
CAVA_POSTGRESQL_SCHEMA=cava

# CAVA Features
CAVA_ENABLE_GRAPH=true
CAVA_ENABLE_VECTOR=false  # Disabled until Pinecone configured
CAVA_ENABLE_MEMORY=true
CAVA_LLM_MODEL=gpt-4
CAVA_MAX_CONVERSATION_CONTEXT=50

# Safety Settings
CAVA_DRY_RUN_MODE=true  # Start in dry-run mode for safety
CAVA_LOG_LEVEL=DEBUG
CAVA_ENABLE_MONITORING=true