# AVA OLO Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration (AWS RDS)
DATABASE_URL=postgresql://username:password@host:5432/farmer_crm
# OR use individual components:
DB_HOST=your-rds-endpoint.amazonaws.com
DB_NAME=farmer_crm
DB_USER=postgres
DB_PASSWORD=your-secure-password
DB_PORT=5432

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key

# Optional: AWS Configuration
AWS_REGION=us-east-1
AWS_APP_RUNNER_SERVICE_URL=https://your-service.awsapprunner.com

# Optional: Twilio for WhatsApp (if using cost tracking)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token

# Optional: Weather API (if using cost tracking)
OPENWEATHER_API_KEY=your-weather-api-key