# AVA OLO Agricultural Core with Constitutional Design
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    postgresql-client \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application files
COPY agricultural_core_constitutional.py .
COPY config.py .

# Copy modules
COPY modules/ ./modules/

# Copy any shared resources if they exist
RUN mkdir -p shared utils app/templates app/static

# Environment variables
ENV PYTHONUNBUFFERED=1
ENV ENVIRONMENT=production
ENV PORT=8080

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# Expose port
EXPOSE 8080

# Run the application
CMD ["python", "-m", "uvicorn", "agricultural_core_constitutional:app", "--host", "0.0.0.0", "--port", "8080"]